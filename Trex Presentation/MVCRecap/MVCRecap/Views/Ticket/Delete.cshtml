@model MVCRecap.Models.TicketModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3 style="margin-bottom: 25px">Are you sure you want to delete this?</h3>
<div>
    <h4>Ticket Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Airline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Origin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Origin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <a class="btn btn-primary" asp-action="Index">No</a>
        <input type="hidden" asp-for="TicketID" />
        <input class="btn btn-danger" type="submit" value="Yes" />
    </form>
</div>
